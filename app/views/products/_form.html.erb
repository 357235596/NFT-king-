<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :detail %>
    <%= form.text_area :detail %>
  </div>

  <div class="field">
    <%= form.label :price_in_rmb %>
    <%= form.number_field :price_in_rmb %>
  </div>

  <div class="field">
    <%= form.label :price_in_eth %>
    <%= form.number_field :price_in_eth %>
  </div>

  <div class="field">
    <%= form.label :author_id %>
    <%= form.collection_select(:author, User.all, :id, :name) %>
  </div>


  <div class="field">
    <%= form.label :author_id %>
    <%= form.file_field :images, multiple: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
